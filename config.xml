<?xml version='1.0' encoding='utf-8'?>
<widget xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:vs="http://schemas.microsoft.com/appx/2014/htmlapps" id="io.cordova.Francis7223c1" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" defaultlocale="en-US">
  <name>ePublisher</name>
  <description>An application to users buy tickets from vendors with the help of google maps</description>
  <author href="http://cordova.io" email="dev@cordova.apache.org">Apache Cordova Team </author>
  <content src="/resources/views/event.blade.php" />
  <access origin="*" />
  <vs:features />
  <preference name="SplashScreen" value="screen" />
  <preference name="windows-target-version" value="8.1" />

  <!-- Support for Cordova 5.0.0 plugin system -->
  <plugin name="cordova-plugin-whitelist" version="1" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />

  <platform name="android">
    <allow-intent href="market:*" />
  </platform>

  <platform name="ios">
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
  </platform>

  <platform name="android">
    <icon src="" density="land-ldpipi" />
    <icon src="" density="mdpi" />
    <icon src="" density="hdpi" />
    <icon src="" density="xhdpi" />
  </platform>

  <platform name="ios">
    <!-- iOS 8.0+ -->
    <!-- iPhone 6 Plus  -->
    <icon src="" width="180" height="180" />
    <!-- iOS 7.0+ -->
    <!-- iPhone / iPod Touch  -->
    <icon src="" width="60" height="60" />
    <icon src="" width="120" height="120" />
    <!-- iPad -->
    <icon src="" width="76" height="76" />
    <icon src="" width="152" height="152" />
    <!-- iOS 6.1 -->
    <!-- Spotlight Icon -->
    <icon src="" width="40" height="40" />
    <icon src="" width="80" height="80" />
    <!-- iPhone / iPod Touch -->
    <icon src="" width="57" height="57" />
    <icon src="" width="114" height="114" />
    <!-- iPad -->
    <icon src="" width="72" height="72" />
    <icon src="" width="144" height="144" />
    <!-- iPhone Spotlight and Settings Icon -->
    <icon src="" width="29" height="29" />
    <icon src="" width="58" height="58" />
    <!-- iPad Spotlight and Settings Icon -->
    <icon src="" width="50" height="50" />
    <icon src="" width="100" height="100" />
  </platform>

  <platform name="windows">
    <icon src="" width="150" height="150" />
    <icon src="" width="360" height="360" />
    <icon src="" width="30" height="30" />
    <icon src="" width="310" height="310" />
    <icon src="" width="44" height="44" />
    <icon src="" width="106" height="106" />
    <icon src="" width="70" height="70" />
    <icon src="" width="71" height="71" />
    <icon src="" width="170" height="170" />
    <icon src="" width="50" height="50" />
    <icon src="" width="120" height="120" />
    <icon src="" width="310" height="150" />
    <icon src="" width="744" height="360" />
  </platform>

  <platform name="wp8">
    <icon src="" width="99" height="99" />          
    <icon src="" width="159" height="159" />
  </platform>

  <platform name="android">
    <splash src="" density="land-hdpi"/>
    <splash src="" density="land-ldpi"/>
    <splash src="" density="land-mdpi"/>
    <splash src="" density="land-xhdpi"/>

    <splash src="" density="port-hdpi"/>
    <splash src="" density="port-ldpi"/>
    <splash src="" density="port-mdpi"/>
    <splash src="" density="port-xhdpi"/>
  </platform>

  <platform name="ios">
    <splash src="" width="320" height="480"/>
    <splash src="" width="640" height="960"/>
    <splash src="" width="768" height="1024"/>
    <splash src="" width="1536" height="2048"/>
    <splash src="" width="1024" height="768"/>
    <splash src="" width="2048" height="1536"/>
    <splash src="" width="640" height="1136"/>
    <splash src="" width="750" height="1334"/>
    <splash src="" width="1242" height="2208"/>
    <splash src="" width="2208" height="1242"/>
  </platform>

  <platform name="windows">
    <splash src="" width="620" height="300"/>
    <splash src="" width="1152" height="1920"/>
    <splash src="" width="1152" height="1920"/>
  </platform>

  <platform name="wp8">
    <splash src="" width="768" height="1280"/>
  </platform>
